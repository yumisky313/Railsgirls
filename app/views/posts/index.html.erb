<h1>Post list</h1>

<table>
	<thead>
		<tr>
			<th>content</th>
			<th>author</th>
			<th>picture</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |post|	%>
		<tr>
			<td><%= post.content %></td>
			<td><%= post.author %></td>
			<td><%= post.picture %></td>
			<td>
				<%= link_to "show", post_path(post) %>
				<%= link_to "edit", edit_post_path(post) %>
				<%= link_to "delete", post_path(post), :method => :delete, :data => {:confirm => "Are you sure?"}  %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to "new post", new_post_path %>